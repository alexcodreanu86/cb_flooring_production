<div class="row">
  <h2 class="secondary-title">Albums:</h2>
  <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
    <% @albums.each do |album| %>
      <li>
        <p class="album-title"><%= album.title %>:</p>
        <% if album.images.last %>
        <%= link_to image_tag(album.images.last.image_path(:thumb), class: "album-thumb"), album_admin_show_path(album) %>
        <% else %>
          <%=  link_to "No images in this album yet", album_admin_show_path(album), class: "album-thumb" %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "New Album", new_album_path, class: "button small radius new-album-button" %>
</div>