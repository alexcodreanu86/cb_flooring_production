<div class="row">
  <h2><%= @album.title %></h2>

  <p>Description:</p>
  <p><%= @album.description %></p>
  <p>Images:</p>

  <% if !@images.empty? %>
    <div class="columns large-12">
      <ul class="example-orbit" data-orbit>
        <% @images.each_with_index  do |image, index| %>
          <li>
            <div class="columns large-4 large-offset-4">
              <%= link_to "Edit Description", edit_image_path(image), class: "button tiny round success" %>
              <%= link_to "Delete Image", image_path(image), method: "DELETE", data: {confirm: "Are you sure that you want to delete this image?"} , class: "button tiny round alert" %>
            </div>

            <%= image_tag image.image_path, alt: "slide #{index + 1}" %>
            <% if !image.description.empty? %>
              <div class="orbit-caption">
                <%= image.description %> 
              </div>
            <% end %> 

          
          </li>
        <% end  %>
      </ul>
    </div>
  <% end %>

  <ul class="bottom-menu">
    <li><%= link_to "Add Image", new_album_image_path(@album) , class: "button tiny round "%></li>

    <li><%= link_to "Edit album", edit_album_path(@album), class: "button tiny round success"  %></li>
    <li><%= link_to "Delete Album", album_path(@album), method: "delete", data:{confirm: "Are you sure you want to delete this album?"}, class: "button tiny round alert" %></li>
  </ul> 
</div>



