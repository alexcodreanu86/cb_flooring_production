<div class="row">
  <h2><%= @album.title %></h2>

  <p>Description:</p>
  <p><%= @album.description %></p>
  <p>Images:</p>
  <ul class="large-block-grid-10 user-survey-list">
    <% @images.each  do |image| %>
      <li><%= link_to image_tag(image.image_path(:thumb)), image_path(image) %></li>
    <% end  %>
  </ul>

  <ul class="bottom-menu">
    <li><%= link_to "Add Image", new_album_image_path(@album) %></li>

    <li><%= link_to "Edit album", edit_album_path(@album)  %></li>
    <li><%= link_to "Delete Album", album_path(@album), method: "delete", data:{confirm: "Are you sure you want to delete this album?"} %></li>
   </ul> 
</div>



