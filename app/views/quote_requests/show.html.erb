
<div class="large-6 large-offset-3 medium-8 medium-offset-2 small-10 small-offset-1">
    <h2 class="secondary-title"><%= @quote_request.name %></h2>
    <p>Phone: <%= @quote_request.phone  %></p>
    <p>Message: <%= @quote_request.message.empty? ? "No message submited" : @quote_request.message %></p>
    <%= link_to (@quote_request.status ? "Set Not Called" : "Set Called"), change_quote_status_path(@quote_request), class: "button tiny radius spaced" %>
    <% if @customer %>
      <%= link_to "Customer Profile", customer_path(@customer), class: "button tiny radius success spaced" %>
    <% else %>
      <%= link_to "Add as Customer", new_customer_from_quote_path(@quote_request), class: "button tiny radius success spaced" %>
    <% end %>
    <%= link_to "Delete Request", @quote_request, method: "DELETE", data: {confirm: "Are you sure you want to delete this request?"}, class: "button tiny radius alert spaced" %>
</div>
